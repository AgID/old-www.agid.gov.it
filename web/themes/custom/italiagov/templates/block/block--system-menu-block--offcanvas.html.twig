{#
/**
 * @file
 * Theme override for a system_menu_block positioned in the offcanvas region.
 *
#}
{% set heading_id = attributes.id ~ '-menu'|clean_id %}
{#
  We always hide the block title but we add it to the markup for accessibility
  reasons. If the user do not want to display the block title we add a default
  translatable title.
#}
{{ title_prefix }}
<h2{{ title_attributes.setAttribute('id', heading_id).addClass('u-hiddenVisually') }}>
{% if not configuration.label_display %}
  {{ 'Menu di navigazione'|t }}
{% else %}
  {{ configuration.label }}
{% endif %}
</h2>
{{ title_suffix }}

<div class="Offcanvas-content u-background-white">

  <div class="Offcanvas-toggleContainer u-background-70 u-jsHidden">
    <a class="Hamburger-toggleContainer u-block u-color-white u-padding-bottom-xxl u-padding-left-s u-padding-top-xxl js-fr-offcanvas-close"
       aria-controls="OffcanvasMenu" aria-label="{{ 'Exit from navigation'|t }}"
       title="{{ 'Exit from navigation'|t }}">
      <span class="Hamburger-toggle is-active" aria-hidden="true"></span>
    </a>
  </div>

  <nav aria-labelledby="{{ heading_id }}"{{ attributes|without('role', 'aria-labelledby') }}>
    {# Menu. #}
    {% block content %}
      {{ content }}
    {% endblock %}
  </nav>
</div>

